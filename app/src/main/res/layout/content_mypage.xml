<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/my_data"
                style="@style/text_title_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:soundEffectsEnabled="true"
                android:text="@string/my_data"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/text_horizontal_padding"
                android:paddingRight="@dimen/text_horizontal_padding">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/current_version"
                        style="@style/text_subtitle_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/text_vertical_padding"
                        android:layout_marginTop="@dimen/text_vertical_padding"
                        android:text="@string/now_fund"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/text_current_coin"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="@dimen/view_default_margin"
                    android:paddingRight="@dimen/view_default_margin"
                    android:text=""/>
            </LinearLayout>

            <include layout="@layout/view_separate"/>

            <LinearLayout
                android:id="@+id/receive_fund_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/text_horizontal_padding"
                android:paddingRight="@dimen/text_horizontal_padding">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/receive_fund"
                        style="@style/text_subtitle_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/text_vertical_padding"
                        android:layout_marginTop="@dimen/text_vertical_padding"
                        android:text="@string/receive_fund"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp"/>

            </LinearLayout>

            <include layout="@layout/view_separate"/>

            <LinearLayout
                android:id="@+id/use_fund_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/text_horizontal_padding"
                android:paddingRight="@dimen/text_horizontal_padding">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/use_fund"
                        style="@style/text_subtitle_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/text_vertical_padding"
                        android:layout_marginTop="@dimen/text_vertical_padding"
                        android:text="@string/use_fund"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/recommendation"
                style="@style/text_title_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/recommendation"/>

            <LinearLayout
                android:id="@+id/receive_recomm_layout"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/text_horizontal_padding"
                android:paddingRight="@dimen/text_horizontal_padding">

                <LinearLayout
                    android:id="@+id/policy1_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/receive_recomm"
                        style="@style/text_subtitle_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/text_vertical_padding"
                        android:layout_marginTop="@dimen/text_vertical_padding"
                        android:text="@string/receive_recomm"/>
                </LinearLayout>

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="4dp"
                    android:paddingRight="4dp"
                    app:srcCompat="@drawable/ic_keyboard_arrow_right_black_24dp"/>

            </LinearLayout>

            <include layout="@layout/view_separate"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/text_horizontal_padding"
                android:paddingRight="@dimen/text_horizontal_padding">

                <LinearLayout
                    android:id="@+id/policy2_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/send_recomm"
                        style="@style/text_subtitle_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/text_vertical_padding"
                        android:layout_marginTop="@dimen/text_vertical_padding"
                        android:text="@string/send_recomm"/>

                </LinearLayout>

                <TextView
                    android:id="@+id/text_friend"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="@dimen/view_default_margin"
                    android:paddingRight="@dimen/view_default_margin"
                    android:text="테스트 123"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>