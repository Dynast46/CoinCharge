<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.sundaymorning.coincharge.activity.SettingAcitivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/version"
                style="@style/text_title_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:soundEffectsEnabled="true"
                android:text="@string/version" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/text_horizontal_padding"
                android:paddingRight="@dimen/text_horizontal_padding">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/current_version"
                        style="@style/text_subtitle_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/text_vertical_padding"
                        android:layout_marginTop="@dimen/text_vertical_padding"
                        android:paddingStart="8dp"
                        android:text="@string/current_version" />
                </LinearLayout>

                <TextView
                    android:id="@+id/text_current_version"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="@dimen/view_default_margin"
                    android:paddingRight="@dimen/view_default_margin"
                    android:text="0.1" />
            </LinearLayout>

            <include layout="@layout/view_separate" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/text_horizontal_padding"
                android:paddingRight="@dimen/text_horizontal_padding">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/new_version"
                        style="@style/text_subtitle_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/text_vertical_padding"
                        android:layout_marginTop="@dimen/text_vertical_padding"
                        android:paddingStart="8dp"
                        android:text="@string/new_version" />
                </LinearLayout>

                <TextView
                    android:id="@+id/text_new_version"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="@dimen/view_default_margin"
                    android:paddingRight="@dimen/view_default_margin"
                    android:text="0.1" />

            </LinearLayout>

            <TextView
                android:id="@+id/push_config"
                style="@style/text_title_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/push_config" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/text_horizontal_padding"
                android:paddingRight="@dimen/text_horizontal_padding">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/push_ads_event"
                        style="@style/text_subtitle_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/text_vertical_padding"
                        android:layout_marginTop="@dimen/text_vertical_padding"
                        android:paddingStart="8dp"
                        android:text="@string/new_ads_text" />

                </LinearLayout>

                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center" />

            </LinearLayout>

            <include layout="@layout/view_separate" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/text_horizontal_padding"
                android:paddingRight="@dimen/text_horizontal_padding">

                <LinearLayout
                    android:id="@+id/change_pw_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/btn_change_pw"
                        style="@style/text_subtitle_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/text_vertical_padding"
                        android:layout_marginTop="@dimen/text_vertical_padding"
                        android:paddingStart="8dp"
                        android:text="@string/change_password" />
                </LinearLayout>

            </LinearLayout>

            <include layout="@layout/view_separate" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/text_horizontal_padding"
                android:paddingRight="@dimen/text_horizontal_padding">

                <LinearLayout
                    android:id="@+id/logout_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/btn_logout"
                        style="@style/text_subtitle_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/text_vertical_padding"
                        android:layout_marginTop="@dimen/text_vertical_padding"
                        android:paddingStart="8dp"
                        android:text="@string/logout" />
                </LinearLayout>

            </LinearLayout>

            <include layout="@layout/view_separate" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/text_horizontal_padding"
                android:paddingRight="@dimen/text_horizontal_padding">

                <LinearLayout
                    android:id="@+id/expire_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/btn_expire"
                        style="@style/text_subtitle_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/text_vertical_padding"
                        android:layout_marginTop="@dimen/text_vertical_padding"
                        android:paddingStart="8dp"
                        android:text="@string/un_sign" />
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/about"
                style="@style/text_title_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/About" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/text_horizontal_padding"
                android:paddingRight="@dimen/text_horizontal_padding">

                <LinearLayout
                    android:id="@+id/policy1_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/policy1"
                        style="@style/text_subtitle_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/text_vertical_padding"
                        android:layout_marginTop="@dimen/text_vertical_padding"
                        android:paddingStart="8dp"
                        android:text="@string/policy" />
                </LinearLayout>

            </LinearLayout>

            <include layout="@layout/view_separate" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/text_horizontal_padding"
                android:paddingRight="@dimen/text_horizontal_padding">

                <LinearLayout
                    android:id="@+id/policy2_layout"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/policy2"
                        style="@style/text_subtitle_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/text_vertical_padding"
                        android:layout_marginTop="@dimen/text_vertical_padding"
                        android:paddingStart="8dp"
                        android:text="@string/policy2" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>